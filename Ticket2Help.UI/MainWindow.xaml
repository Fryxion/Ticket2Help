<Window x:Class="Ticket2Help.UI.MainWindow">
    <Grid>
        <DataGrid ItemsSource="{Binding UserTickets}" 
                  SelectedItem="{Binding SelectedTicket}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nº" Binding="{Binding SequentialNumber}"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Data" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy HH:mm}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Criar Ticket Hardware" Click="CreateHardwareTicket_Click"/>
        <Button Content="Atender Próximo" Click="AttendNextTicket_Click"/>
    </Grid>
</Window>