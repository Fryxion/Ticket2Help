<Window x:Class="Ticket2Help.UI.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="350" Width="400">
    <Grid>
        <TextBlock Text="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,34,0,0" FontSize="16"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,30,0,0" Width="250" Height="30"/>

        <TextBlock Text="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,84,0,0" FontSize="16"/>
        <TextBox Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,80,0,0" Width="250" Height="30"/>

        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,134,0,0" FontSize="16"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,130,0,0" Width="250" Height="30"/>

        <Button Name="RegisterButton" Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,180,0,0" Width="250" Height="40" Click="RegisterButton_Click"/>
    </Grid>
</Window>
