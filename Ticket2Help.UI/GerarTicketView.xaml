<Window x:Class="Ticket2Help.UI.Views.GerarTicketView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerar Novo Ticket" Height="400" Width="500">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Tipo de Ticket:" Margin="0 0 0 10" />
            <ComboBox x:Name="cbTipoTicket" SelectedIndex="0">
                <ComboBoxItem Content="Hardware" />
                <ComboBoxItem Content="Software" />
            </ComboBox>

            <TextBlock Text="Código do Colaborador:" Margin="0 10 0 5"/>
            <TextBox x:Name="txtCodigoColaborador"/>

            <TextBlock Text="Descrição / Problema:" Margin="0 10 0 5"/>
            <TextBox x:Name="txtDescricao"/>

            <Button Content="Submeter Ticket" Margin="0 20 0 0" Click="BtnSubmeter_Click"/>
        </StackPanel>
    </Grid>
</Window>
